#include <stdio.h>
#include <stdlib.h>
#include "gpio.h"

int main()
{

		
	double sek = 0;
	double sec = 0; 
	double frq = 0.0;
	int long msek = 0;
	
	system( "clear" );

	MakeGpio( Gpio15 );

	DirectionGpio( Gpio15, GpioOut );

	SetValueGpio( Gpio15, GpioClear );

	printf( "Bitte geben sie die Frequenz in Hz ein:\n" );
	printf( ">" );
	scanf( "%lf", &frq );

	printf( "Die IR-LED (Gpio15) blinkt mit einer Frequenz von %.2lf Hz\n\n", frq);
	printf( "zum Beenden Ctrl + C dr√ºcken\n" );

	sek = ( 1 / frq );
 	sec = ( sek * 1000000 );
	msek = ( int long )sec;

	for ( ; ; ) {	

		SetValueGpio( Gpio15, GpioSet );
		usleep(msek);

		SetValueGpio( Gpio15, GpioClear );
		usleep(msek);

	}

	return 0;
}

